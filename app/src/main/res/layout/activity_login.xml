<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_photo"
    android:orientation="vertical"
    tools:context="Login.LoginActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dip"
        android:fontFamily="cursive"
        android:text="BandIT"
        android:textColor="#FFFFFF"
        android:textSize="80sp" />
    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/text_login_shape"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#27416E"
        android:textColorHint="#CCAAA3A3" />

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_login_shape"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#27416E"
        android:textColorHint="#CCAAA3A3"
        android:hint="@string/prompt_password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login"
        style="@android:style/Widget.Button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_login_shape"
        android:enabled="true"
        android:onClick="LoginFunction"
        android:text="@string/action_sign_in_short"
        android:textColor="#AEC5C2C2"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_login_shape"
        android:onClick="registerFunction"
        android:text="Sign Up"
        android:textColor="#AEC5C2C2"
        android:textSize="16sp" />
    <CheckBox
        android:id="@+id/Remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dip"
        android:layout_marginStart="140dp"
        android:buttonTint="#FFFFFF"
        android:text="Remember me"
        android:textColor="#FFFFFF" />
</LinearLayout>