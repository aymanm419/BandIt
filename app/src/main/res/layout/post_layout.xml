<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">


        <TextView
            android:id="@+id/PostSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="23dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/song_name"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/PostAlbumPicture"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/PostSingAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/album_name"
            android:textColor="#BFBDBD"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/PostSongName"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/PostSongName"
            app:layout_constraintTop_toBottomOf="@id/PostSongName" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/PostAlbumPicture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#000000"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>